<UserControl
    x:Class="TeamsUI.Views.Activities"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialIcons="using:Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:TeamsUI.ViewModels"
    xmlns:vm="clr-namespace:TeamsUI.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:ActivitiesViewModel"
    DataContext="vm:viewmodels:ActivitiesViewModel"
    mc:Ignorable="d">
    <Grid ColumnDefinitions="300,*">
        <Border Grid.Column="0" BoxShadow="0 0 9 0 DarkGray">
            <Grid RowDefinitions="50,750">
                <Border BorderBrush="{DynamicResource Black400}" BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="220,35,35">
                        <TextBlock
                            Grid.Column="0"
                            Margin="20,1"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="UltraBold"
                            IsVisible="{Binding IsNavVisible}"
                            Text="Flux" />
                        <Button
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Classes="Icon1"
                            Command="{Binding HandleVisibility}"
                            Content="{materialIcons:MaterialIconExt Kind=FilterVariant,
                                                                    Size=22}"
                            IsVisible="{Binding IsNavVisible}" />

                        <Button
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Classes="Icon1"
                            Content="{materialIcons:MaterialIconExt Kind=DotsHorizontal,
                                                                    Size=22}"
                            IsVisible="{Binding IsNavVisible}">
                            <Button.ContextMenu>
                                <ContextMenu Width="180" Cursor="Hand">
                                    <MenuItem Header="Copy" />
                                    <MenuItem Header="Paste" />
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>

                    </Grid>
                </Border>
                <StackPanel Grid.Row="1">
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton
                            Width="35"
                            Height="25"
                            Margin="20,5"
                            VerticalAlignment="Center"
                            IsChecked="false" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource Black300}"
                            Text="Non lu uniquement" />
                    </StackPanel>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource Black300}"
                        TextWrapping="WrapWithOverflow">
                        <Span>Vous verrez les mentions, les</Span>
                        <LineBreak />
                        <Span>r√©ponses et les autres notifications</Span>
                        <LineBreak />
                        <Span>ici.</Span>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
        <Grid
            Grid.Column="1"
            Margin="2,0,0,0"
            RowDefinitions="50,*">
            <Border BorderBrush="{DynamicResource Black400}" BorderThickness="0,0,0,0.6" />
        </Grid>
    </Grid>
</UserControl>
