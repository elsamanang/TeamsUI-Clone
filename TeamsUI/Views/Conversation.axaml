<UserControl
    x:Class="TeamsUI.Views.Conversation"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialIcons="using:Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid ColumnDefinitions="300,*">
        <Border Grid.Column="0" BoxShadow="0 0 9 0 DarkGray">
            <Grid RowDefinitions="50,750">
                <Border BorderBrush="{DynamicResource Black400}" BorderThickness="0,0,0,1">
                    <Grid ColumnDefinitions="220,35,35">
                        <TextBlock
                            Grid.Column="0"
                            Margin="20,1"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="UltraBold"
                            Text="Conversation" />
                        <Button
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Classes="Icon1"
                            Content="{materialIcons:MaterialIconExt Kind=FilterVariant,
                                                                    Size=22}" />
                        <Button
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Classes="Icon1"
                            Content="{materialIcons:MaterialIconExt Kind=SquareEditOutline,
                                                                    Size=22}" />
                    </Grid>
                </Border>
                <StackPanel Grid.Row="1">
                    <Expander
                        Width="300"
                        VerticalAlignment="Top"
                        Classes="Expend"
                        IsExpanded="True">
                        <Expander.Styles>
                            <Style Selector="Expander">
                                <Setter Property="Foreground" Value="{DynamicResource Black300}" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                            <Style Selector="Expander/template/ContentPresenter">
                                <Setter Property="Background" Value="{DynamicResource Blue300}" />
                            </Style>
                        </Expander.Styles>
                        <Expander.Header>
                            Suggetions
                        </Expander.Header>
                        <ListBox>
                            <ListBox.Styles>
                                <Style Selector="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Height" Value="50" />
                                    <Setter Property="Padding" Value="20,0" />
                                    <Setter Property="Foreground" Value="{DynamicResource Black300}" />
                                </Style>
                                <Style Selector="ListBoxItem StackPanel.detailsIcon">
                                    <Setter Property="IsVisible" Value="False" />
                                </Style>
                                <Style Selector="ListBoxItem:pointerover StackPanel.detailsIcon">
                                    <Setter Property="IsVisible" Value="True" />
                                </Style>
                                <Style Selector="ListBoxItem:pressed StackPanel.detailsIcon">
                                    <Setter Property="IsVisible" Value="True" />
                                </Style>
                                <Style Selector="ListBoxItem:selected StackPanel.detailsIcon">
                                    <Setter Property="IsVisible" Value="True" />
                                </Style>
                                <Style Selector="ListBoxItem:pointerover/template/ContentPresenter">
                                    <Setter Property="Background" Value="{DynamicResource White100}" />
                                </Style>
                                <Style Selector="ListBoxItem:pressed/template/ContentPresenter">
                                    <Setter Property="Background" Value="{DynamicResource White100}" />
                                </Style>
                                <Style Selector="ListBoxItem:selected/template/ContentPresenter">
                                    <Setter Property="Background" Value="{DynamicResource White100}" />
                                </Style>
                                <Style Selector="ListBoxItem:selected/template/ContentPresenter">
                                    <Setter Property="Background" Value="{DynamicResource White100}" />
                                </Style>
                            </ListBox.Styles>
                            <ListBoxItem>
                                <Grid ColumnDefinitions="40,160,60">
                                    <Border
                                        Grid.Column="0"
                                        Width="35"
                                        Height="38"
                                        Background="AliceBlue"
                                        CornerRadius="40">
                                        <Grid>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="EM" />
                                            <Border
                                                Width="10"
                                                Height="10"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Background="{DynamicResource Blue300}"
                                                CornerRadius="10" />
                                        </Grid>
                                    </Border>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0"
                                        VerticalAlignment="Center"
                                        Text="ici le text" />
                                    <StackPanel
                                        Grid.Column="2"
                                        Classes="detailsIcon"
                                        Orientation="Horizontal">
                                        <Button
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Classes="Icon1"
                                            Content="{materialIcons:MaterialIconExt Kind=ArrowTopRightBoldBoxOutline,
                                                                                    Size=22}" />
                                        <Button
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Classes="Icon1"
                                            Content="{materialIcons:MaterialIconExt Kind=DotsHorizontal,
                                                                                    Size=22}" />
                                    </StackPanel>
                                </Grid>
                            </ListBoxItem>
                            <ListBoxItem>
                                <Grid ColumnDefinitions="40,160,60">
                                    <Border
                                        Grid.Column="0"
                                        Width="35"
                                        Height="38"
                                        Background="AliceBlue"
                                        CornerRadius="40">
                                        <Grid>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="EM" />
                                            <Border
                                                Width="10"
                                                Height="10"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Background="{DynamicResource Blue300}"
                                                CornerRadius="10" />
                                        </Grid>
                                    </Border>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0"
                                        VerticalAlignment="Center"
                                        Text="ici le text" />
                                    <StackPanel
                                        Grid.Column="2"
                                        Classes="detailsIcon"
                                        Orientation="Horizontal">
                                        <Button
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Classes="Icon1"
                                            Content="{materialIcons:MaterialIconExt Kind=ArrowTopRightBoldBoxOutline,
                                                                                    Size=22}" />
                                        <Button
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Classes="Icon1"
                                            Content="{materialIcons:MaterialIconExt Kind=DotsHorizontal,
                                                                                    Size=22}" />
                                    </StackPanel>
                                </Grid>
                            </ListBoxItem>
                            <ListBoxItem>
                                <Grid ColumnDefinitions="40,160,60">
                                    <Border
                                        Grid.Column="0"
                                        Width="35"
                                        Height="38"
                                        Background="AliceBlue"
                                        CornerRadius="40">
                                        <Grid>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="EM" />
                                            <Border
                                                Width="10"
                                                Height="10"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Background="{DynamicResource Blue300}"
                                                CornerRadius="10" />
                                        </Grid>
                                    </Border>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5,0"
                                        VerticalAlignment="Center"
                                        Text="ici le text" />
                                    <StackPanel
                                        Grid.Column="2"
                                        Classes="detailsIcon"
                                        Orientation="Horizontal">
                                        <Button
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Classes="Icon1"
                                            Content="{materialIcons:MaterialIconExt Kind=ArrowTopRightBoldBoxOutline,
                                                                                    Size=22}" />
                                        <Button
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Classes="Icon1"
                                            Content="{materialIcons:MaterialIconExt Kind=DotsHorizontal,
                                                                                    Size=22}" />
                                    </StackPanel>
                                </Grid>
                            </ListBoxItem>
                        </ListBox>
                    </Expander>
                </StackPanel>
            </Grid>
        </Border>
        <Grid
            Grid.Column="1"
            Margin="2,0,0,0"
            RowDefinitions="50,*">
            <Border BorderBrush="{DynamicResource Black400}" BorderThickness="0,0,0,0.6" />
        </Grid>
    </Grid>
</UserControl>
